# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/roombook

# Database Connection Details
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=your_password
PGDATABASE=roombook

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-here

# Application Configuration
NODE_ENV=development
REPL_ID=your-repl-id
ISSUER_URL=https://replit.com/oidc
REPLIT_DOMAINS=your-domain.repl.co

# Email Configuration (Optional - for SendGrid notifications)
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here

# JWT Configuration (for JWT authentication mode)
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# LDAP Configuration (for LDAP authentication mode)
LDAP_URL=ldap://your-ldap-server:389
LDAP_BIND_DN=cn=admin,dc=company,dc=com
LDAP_BIND_PASSWORD=your-ldap-password
LDAP_SEARCH_BASE=ou=users,dc=company,dc=com
LDAP_SEARCH_FILTER=(uid={{username}})

# OIDC Configuration (for OIDC authentication mode)
OIDC_CLIENT_ID=your-oidc-client-id
OIDC_CLIENT_SECRET=your-oidc-client-secret
OIDC_ISSUER_URL=https://your-provider.com
OIDC_CALLBACK_URL=http://localhost:5000/api/auth/oidc/callback

# Default Admin Configuration
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=Admin@123456
DEFAULT_ADMIN_EMAIL=admin@company.com